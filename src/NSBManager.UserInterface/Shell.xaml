<Window x:Class="NSBManager.UserInterface.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="clr-namespace:Microsoft.Practices.Composite.Presentation.Regions;assembly=Microsoft.Practices.Composite.Presentation"
    xmlns:Infrastructure="clr-namespace:NSBManager.UserInterface.Infrastructure"
    Title="Shell" Height="538" Width="790" Background="AliceBlue">
    <Grid>
        <StackPanel Margin="10,10,12,0" Height="221" VerticalAlignment="Top">
            <ItemsControl Name="MainRegion" cal:RegionManager.RegionName="{x:Static Infrastructure:RegionNames.MainRegion}"/>
        </StackPanel>
        <StackPanel Margin="10,237,12,10">
            <ItemsControl Name="DetailsRegion" cal:RegionManager.RegionName="{x:Static Infrastructure:RegionNames.DetailsRegion}"/>
        </StackPanel>
    </Grid>
</Window>

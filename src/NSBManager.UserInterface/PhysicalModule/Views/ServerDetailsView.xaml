<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="NSBManager.UserInterface.PhysicalModule.Views.ServerDetailsView"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Selected Server: " VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding SelectedServer.Name}" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontWeight="Bold" />
        </StackPanel>
        
    </Grid>
</UserControl>

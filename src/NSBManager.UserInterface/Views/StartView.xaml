<UserControl x:Class="NSBManager.UserInterface.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <Label Content="Welcome to NSBManager"
               FontSize="18"
               Foreground="White">
            
            <Label.Effect>
                <DropShadowEffect BlurRadius="10"
                                  Color="#FF09D1EE"
                                  Opacity="1"
                                  ShadowDepth="0"
                                  Direction="0" />
            </Label.Effect>
        
        </Label>
        <Label Content="This is the start view"
                   Foreground="White" />
        
    </StackPanel>
</UserControl>
